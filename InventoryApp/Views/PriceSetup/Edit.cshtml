@model InventoryApp.Models.PriceSetup

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>PriceSetup</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PriceSetupId)

        <div class="form-group">
            @Html.LabelFor(model => model.ItemCategoryId, "ItemCategoryId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemCategoryId", "Please Select One Category")
                @Html.ValidationMessageFor(model => model.ItemCategoryId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemInformationId, "ItemInformationId", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ItemInformationId", "Please Select One Item")
                @Html.ValidationMessageFor(model => model.ItemInformationId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UnitPrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UnitPrice)
                @Html.ValidationMessageFor(model => model.UnitPrice)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Vat) %
                @Html.ValidationMessageFor(model => model.Vat)
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
