@model IEnumerable<InventoryApp.Models.PriceSetup>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p style="float: right">
    <a href="/Reports/ReportView/PriceSetupWebForm.aspx">Report</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ItemCategory.ItemCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemInformation.ItemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VatPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ItemCategory.ItemCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ItemInformation.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VatPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PriceSetupId }) |
            @Html.ActionLink("Details", "Details", new { id=item.PriceSetupId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PriceSetupId })
        </td>
    </tr>
}

</table>
